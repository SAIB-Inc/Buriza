@namespace Buriza.UI.Components.Common

<MudTabs 
    Elevation="2" 
    Rounded="true" 
    ApplyEffectsToContainer="true"
    Outlined="true"
    ActivePanelIndex="@ActivePanelIndex"
    ActivePanelIndexChanged="@ActivePanelIndexChanged"
    Class="@(@"
        !bg-none !shadow-none
        !border !border-[var(--mud-palette-overlay-light)] !rounded-full !p-1
        [&_.mud-tabs-tabbar]:!bg-transparent
        [&_.mud-tab-active]:!text-[var(--mud-palette-primary-lighten)]
        [&_.mud-tab-slider]:!bg-[var(--mud-palette-overlay-light)]
        [&_.mud-tab]:!font-medium
        [&_.mud-tab]:!normal-case
        [&_.mud-tab]:!text-lg
        [&_.mud-tab]:!min-h-10
        [&_.mud-tab]:gap-2
        [&_.mud-tab]:!transition-colors
        [&_.mud-tab]:!duration-300
        [&_.mud-tooltip-root]
        [&_.mud-tab-panel]:!rounded-full
        [&_.mud-tab-panel]:text-[var(--mud-palette-dark-lighten)]
        [&_.mud-tabs-tabbar-wrapper]:!py-0 " + Class)"
>
    @ChildContent
</MudTabs>