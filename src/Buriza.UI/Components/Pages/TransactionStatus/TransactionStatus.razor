@using Buriza.UI.Components.Common
@using Buriza.UI.Components.Controls
@using Buriza.UI.Resources

@page "/transaction/success"

@namespace Buriza.UI.Components.Pages

<section class="min-h-[600px] h-screen">
    <div class="max-[376px]:!gap-2 max-[376px]:!pb-4 max-[376px]:!pt-4 container mx-auto h-full w-full flex flex-col items-center justify-center !px-4 !pb-8 !pt-16 !gap-35 lg:max-w-[430px]">
        <div class="max-[376px]:fixed max-[376px]:!top-[60px] flex flex-col items-center justify-center !gap-4">
            <div class="relative">
                <MudImage
                    Alt="blue diamond"
                    Src="@Misc.DiamondBlue"
                    Class="absolute top-[75px] left-[-50px] scale-[2]"
                />
                <MudImage
                    Alt="yellow diamond"
                    Src="@Misc.DiamondYellow"
                    Class="absolute top-[-7px] left-[-24px] scale-150"
                />
                <MudImage
                    Alt="blue diamond"
                    Src="@Misc.DiamondBlue"
                    Class="absolute top-[-42px] left-[25px] scale-150"
                />
                <MudImage
                    Alt="Successful"
                    Src="@Mascots.Mascot6"
                    Class="!max-w-[120px] !w-full"
                />
                <MudImage
                    Alt="yellow diamond"
                    Src="@Misc.DiamondYellow"
                    Class="absolute top-[20px] right-[-52px] scale-[2]"
                />
                <MudImage
                    Alt="orange diamond"
                    Src="@Misc.DiamondOrange"
                    Class="absolute top-[-70px] right-[-10px]"
                />
                <MudImage
                    Alt="purple diamond"
                    Src="@Misc.DiamondPurple"
                    Class="absolute top-[90px] right-[-54px] scale-[1.75]"
                />
            </div>
            <div class="!text-center">
                <MudText Class="!text-[32px] !font-semibold">
                    Successfully Sent
                </MudText>
                <MudText Class="!text-sm">
                    <span>Your transaction has been sent to the </span><br/>
                    <span>network and will be processed </span><br/>
                    <span>in a few seconds.</span>
                </MudText>
            </div>
        </div>
        <div class="max-[376px]:!bottom-[88px] w-[calc(100%-32px)] fixed bottom-30 z-20 lg:max-w-[430px]">
            <BurizaButton
                Variant="Variant.Filled"
                Color="Color.Primary"
                Class="!w-full"
                OnClick="NavigateToSend"
            >
                Done
            </BurizaButton>
        </div>
    </div>
</section>