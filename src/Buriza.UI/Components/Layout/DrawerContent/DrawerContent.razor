@using Buriza.UI.Services
@using Buriza.Data.Models.Enums
@namespace Buriza.UI.Components.Layout

@switch (AppStateService.CurrentDrawerContent)
{
    case DrawerContentType.Summary:
        <SummarySection />
        break;
        
    case DrawerContentType.AuthorizeDapp:
        <AuthorizeDappSection />
        break;
        
    case DrawerContentType.Receive:
        <ReceiveSection />
        break;
        
    case DrawerContentType.Send:
        <SendSection />
        break;
        
    case DrawerContentType.SelectAsset:
        <SelectAssetSection />
        break;
        
    case DrawerContentType.TransactionStatus:
        <TransactionStatusSection />
        break;
        
    case DrawerContentType.Settings:
        <SettingsSection />
        break;
        
    case DrawerContentType.NodeSettings:
        <NodeSettingsSection />
        break;

    case DrawerContentType.SwitchWallet:
        <SwitchWalletSection />
        break;

    case DrawerContentType.SwitchAccount:
        <SwitchAccountSection />
        break;

    case DrawerContentType.AccountSettings:
        <AccountSettingsSection />
        break;
        
    case DrawerContentType.Manage:
        <ManageSection />
        break;
        
    default:
        <div></div>
        break;
}