                            <MudSpacer />
                            <MudIcon Icon="@BurizaIcons.ChevronLeftIcon" Class="!text-[var(--mud-palette-text-primary)]"/>
                        </div>
                        <div>
                            <hr class="!border-t !border-[var(--mud-palette-divider)] !mt-2" />
                        </div>
                    </div>
                </MudNavLink>

