@using Buriza.UI.Components.Common
@using Buriza.UI.Components.Controls
@using Buriza.UI.Resources

@namespace Buriza.UI.Components.Layout

<div class="w-full h-full !px-4 !pb-8 flex flex-col items-center">
    <div class="w-full">
        <BurizaSearchBar/>
    </div>
    <div class="flex flex-col gap-y-3 !space-y-2 !overflow-y-auto max-h-[calc(100vh-201px)] !rounded-[12px] w-full [&_.mud-typography]:!text-[var(--mud-palette-text-primary)]">
        <MudPaper Class="!bg-[var(--mud-palette-dark)] !rounded-[12px] !shadow-sm !overflow-hidden">
