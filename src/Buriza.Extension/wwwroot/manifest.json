{
  "manifest_version": 3,
  "name": "Buriza",
  "description": "Cross-platform Cardano wallet extension",
  "version": "0.1",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "content/BackgroundWorker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Buriza Wallet",
    "default_icon": {
      "16": "favicon/favicon_16.png",
      "32": "favicon/favicon_32.png",
      "48": "favicon/favicon_48.png",
      "128": "favicon/favicon_128.png"
    }
  },
  "icons": {
    "16": "favicon/favicon_16.png",
    "32": "favicon/favicon_32.png",
    "48": "favicon/favicon_48.png",
    "128": "favicon/favicon_128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "framework/*",
        "content/*"
      ],
      "matches": [ "<all_urls>" ]
    }
  ]
}